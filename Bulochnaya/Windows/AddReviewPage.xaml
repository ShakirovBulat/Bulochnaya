<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bulochnaya.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Bulochnaya.Windows.AddReviewPage"
        mc:Ignorable="d"
        Title="AddReviewPage" Height="450" Width="359.74" Background="#FFE0D7D7" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="MyBuutonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Border Background="Black" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="354"/>
        <Label Content="Добавление отзыва" HorizontalAlignment="Left" Margin="75,-2,0,0" VerticalAlignment="Top" Foreground="White" Width="211" FontSize="22"/>
        <materialDesign:RatingBar x:Name="BasicRatingBar" Value="0" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <TextBox x:Name="review" HorizontalAlignment="Left" Height="152" Margin="69,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="217" Background="#FF5D210B" Foreground="White">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Button Style="{StaticResource MyBuutonStyle}" x:Name="inorder" HorizontalAlignment="Left" Margin="115,351,0,0" VerticalAlignment="Top" Width="109" Height="34" Click="inorder_Click" Cursor="Hand">
            <Button.Background>
                <ImageBrush ImageSource="/Bulochnaya;component/Images/Go.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
