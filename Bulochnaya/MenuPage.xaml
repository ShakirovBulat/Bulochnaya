<Window x:Class="Bulochnaya.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bulochnaya"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage" WindowState="Maximized">

    <Grid>
        <Menu Height="25" VerticalAlignment="Top" Background="LightGray">
            <MenuItem Header="Заказы" Click="MenuItem_Click_To_Order">
            </MenuItem>
            <MenuItem Header="Новости" Click="MenuItem_Click_To_News">
            </MenuItem>
            <MenuItem Header="Меню" Height="25" Click="MenuItem_Click_To_Menu"></MenuItem>
            <MenuItem x:Name="news" Header="Добавить новость" Click="news_Click"/>
            <MenuItem x:Name="menu" Header="Добавить новое изделие"/>
        </Menu>
        
    </Grid>
</Window>
